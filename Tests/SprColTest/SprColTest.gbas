//Write your own game with GLBScript

GLOBAL x = 40

TYPE TPlayer
	FUNCTION Update:
		DRAWRECT 100,100,100,100,RGB(255,0,0)
	ENDFUNCTION
ENDTYPE
GLOBAL P AS TPlayer
SUB GLB_ON_LOOP:
	INC x, 2
    STDOUT x
    IF x > 640 THEN x = -80
	PRINT "Hello World "+GETTIMERALL()+": "+x, x, 10
	P.Update()
    SHOWSCREEN
ENDSUB


