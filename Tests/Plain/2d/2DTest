?BLACKLIST ALL

SUB GLB_ON_INIT:
	SYSTEMPOINTER TRUE
	CLEARSCREEN RGB(0,0,255) //yay blue background
	
	LOADSPRITE "Media/img.png", 0
	
	CREATESCREEN 0, 1, 128, 128
	USESCREEN 0
		DRAWRECT 0,0, 128,128,RGB(255,255,0)
	USESCREEN -1
	
ENDSUB

SUB GLB_ON_LOOP:
	LOCAL x, y, ml, mr
	MOUSESTATE x, y, ml, mr
	
	DRAWRECT 0,0,x,y,RGB(0,255,0)
	DRAWLINE 0,0,x,y,RGB(255,0,0)
	
	DRAWSPRITE 0, x, y
	DRAWSPRITE 1, x,y+128
	
	SHOWSCREEN
ENDSUB

